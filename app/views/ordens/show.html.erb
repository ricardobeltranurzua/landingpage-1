<style type="text/css" media="print">

</style>
<table class="table">
  <tbody>
    <tr>
      <td width="3">
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= @orden.cliente.full_name %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>Cedula: </strong>
                <%= @orden.cliente.nif %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>Correo: </strong>
                <%= @orden.users.email %>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
      <td width="1">
        <table class="table">
          <tbody>
            <tr>
              <td>
              <strong>Orden: </strong>
              <%= @orden.codigo %>
              </td>
            </tr>
            <tr>
              <td>Fecha Proceso: 
                <%= @orden.proceso_text %>
              </td>
            </tr>
            <tr>
              <td>
              <strong>Fecha Entrega: </strong>
                <%= @orden.entrega_text %>      
              </td>
            </tr>
            <tr>
              <td>
              <strong>Fecha Cierre: </strong>
                <%= @orden.cierre_text %>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>

<table class="table">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @orden.orden_producto.each do |t| %> 
    <tr>
      <td>
        <%= t.producto.nombre %>
      </td>
      <td>
        <%= t.cantidad %>
      </td>
      <td>
        <%= t.precio %>
      </td>
      <td>       
        <%= t.precio * t.cantidad %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td><strong>Total</strong></td>
      <td><%= @orden.get_total %></td>
    </tr>
  </tbody>
</table>


